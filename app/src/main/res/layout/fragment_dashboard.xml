<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_black"
    tools:context=".ui.dashboard.DashboardFragment">

<androidx.core.widget.NestedScrollView
    android:id="@+id/nestedScrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.dashboard.DashboardFragment">

        <TextView
            android:id="@+id/txtBalanceListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/sans_bold"
            android:padding="12dp"
            android:singleLine="true"
            android:text="@string/balance_list"
            android:textAlignment="textStart"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rclBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/txtBalanceListTitle" />

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="28dp"
            android:background="@drawable/line_horizontal_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rclBalance" />


            <!-- pair section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cns_sell_currency"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/round_corner_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewLine">

                <!-- current pair -->
                <ImageView
                    android:id="@+id/img_more_pair1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="12dp"
                    android:rotation="90"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow_up"
                    app:tint="@color/colorWhite" />

                <TextView
                    android:id="@+id/txt_sell_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="21dp"
                    android:fontFamily="@font/sans_regular"
                    android:gravity="center"
                    android:text="@string/sell"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_line1"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="23dp"
                    android:background="@drawable/line_vertical_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_sell_title"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcl_sell_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pair_option_sell"
                    app:layout_constraintStart_toEndOf="@+id/view_line1"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="1"
                    tools:listitem="@layout/layout_add_tr_other_pairs_item" />

                <View
                    android:id="@+id/pair_option_sell"
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_corner_gray"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_other_sell_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:fontFamily="@font/sans_light"
                    android:gravity="center"
                    android:text="@string/other"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/img_more_pair1"
                    app:layout_constraintStart_toEndOf="@+id/rcl_sell_list"
                    app:layout_constraintStart_toStartOf="@+id/pair_option_sell"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cns_buy_currency"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/round_corner_purple"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cns_sell_currency">

                <!-- current pair -->
                <ImageView
                    android:id="@+id/img_more_pair_buy"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginEnd="12dp"
                    android:rotation="90"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow_up"
                    app:tint="@color/colorWhite" />

                <TextView
                    android:id="@+id/txt_buy_title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginStart="21dp"
                    android:fontFamily="@font/sans_regular"
                    android:gravity="center"
                    android:text="@string/buy"
                    android:textColor="@color/colorGray"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view_line"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="23dp"
                    android:background="@drawable/line_vertical_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_buy_title"
                    app:layout_constraintTop_toTopOf="parent" />


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcl_buy_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/pair_option_buy"
                    app:layout_constraintStart_toEndOf="@+id/view_line"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:itemCount="1"
                    tools:listitem="@layout/layout_add_tr_other_pairs_item" />

                <View
                    android:id="@+id/pair_option_buy"
                    android:layout_width="80dp"
                    android:layout_height="0dp"
                    android:background="@drawable/round_corner_gray"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_other_buy_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:fontFamily="@font/sans_light"
                    android:gravity="center"
                    android:text="@string/other"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/img_more_pair_buy"
                    app:layout_constraintStart_toEndOf="@+id/rcl_buy_list"
                    app:layout_constraintStart_toStartOf="@+id/pair_option_buy"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingStart="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cns_buy_currency"
                android:paddingEnd="20dp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_amount"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/round_corner_purple_light"
                    android:hint="@string/amount"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/colorGrayLight"
                    android:textColorHint="@color/colorGray"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cns_buy_price"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="false"
                    android:background="@drawable/round_corner_purple_light"
                    android:clickable="true"
                    android:focusable="true"
                    android:layoutDirection="ltr"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/edt_amount">

                    <TextView
                        android:id="@+id/txt_buy_price_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sans_light"
                        android:paddingStart="20dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="6dp"
                        android:text="@string/buy_price"
                        android:textColor="@color/colorGray"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/txt_buy_price_amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sans_light"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_buy_price_hint"
                        app:layout_constraintVertical_chainStyle="packed" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cns_commission_fee"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="false"
                    android:background="@drawable/round_corner_purple_light"
                    android:clickable="true"
                    android:focusable="true"
                    android:layoutDirection="ltr"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cns_buy_price">

                    <TextView
                        android:id="@+id/txt_commission_fee_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sans_light"
                        android:paddingStart="20dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="6dp"
                        android:text="@string/commission_fee"
                        android:textColor="@color/colorGray"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/txt_commission_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sans_light"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_commission_fee_title"
                        app:layout_constraintVertical_chainStyle="packed" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cns_date"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:animateLayoutChanges="false"
                    android:background="@drawable/round_corner_purple_light"
                    android:clickable="true"
                    android:focusable="true"
                    android:layoutDirection="ltr"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cns_commission_fee">

                    <TextView
                        android:id="@+id/txt_date_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sans_light"
                        android:paddingStart="20dp"
                        android:paddingTop="6dp"
                        android:paddingEnd="20dp"
                        android:paddingBottom="6dp"
                        android:text="@string/date"
                        android:textColor="@color/colorGray"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_chainStyle="packed" />

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sans_light"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/txt_date_title"
                        app:layout_constraintVertical_chainStyle="packed" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/add_transaction_btn_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sans_bold"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="@string/add_transaction"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/add_transaction_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@drawable/line_horizontal_gray"
        app:layout_constraintBottom_toTopOf="@id/add_transaction_btn_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>